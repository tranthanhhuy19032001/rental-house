<div class="singup-signin">
    <div class="container" style="width: 40%;">
        <div class="path pt-2">
            <ol>
                <li class="">
                    <a href="/">Trang chủ</a>
                    <span class="p-2">></span>
                </li>
                <li>
                    <a href="/dangky">Đăng Ký</a>
                </li>
            </ol>
        </div>
        <div class="mt-2">
            {{#if message}}
            <div style="text-align: center; color:red" class="pb-2 fs-5">
                <strong>{{message}}</strong>
            </div>
            {{/if}}
            <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="tab-login" data-mdb-toggle="pill" href="/dangnhap" role="tab"
                        aria-controls="pills-login" aria-selected="true">Login</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="tab-register" data-mdb-toggle="pill" href="/dangky" role="tab"
                        aria-controls="pills-register" aria-selected="false">Register</a>
                </li>
            </ul>
            <div class="">
                <div class="main">
                    <form action="/user/register" method="POST" class="form" id="form-1">
                        <h4 class="heading">Account Register Form</h4>
                        <p>Let's learn JavaScript with register form</p>
                        <div class="form-group">
                            <label for="fullname">Your name</label>
                            <input type="text" class="form-control" id="fullname" name="fullname"
                                placeholder="Ex: Tran Thanh Huy">
                            <span class="form-message"></span>
                        </div>

                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" id="email" name="email">
                            <span class="form-message"></span>
                        </div>

                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" name="password">
                            <span class="form-message"></span>
                        </div>

                        <div class="form-group">
                            <label for="password_confirmation">Confirm password</label>
                            <input type="password" class="form-control" id="password_confirmation"
                                name="password_confirmation">
                            <span class="form-message"></span>
                        </div>

                        <div class="form-group">
                            <div class="d-flex">
                                <input class="form-check-input" type="checkbox" id="registerCheck" checked
                                    aria-describedby="registerCheckHelpText" required />
                                <label class="form-check-label ms-2" for="registerCheck">I have read and
                                    agree to the terms</label>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-register w-100 mt-3" id="btn-register">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>




<script src="/js/validator.js"></script>
<script>
    Validator({
        form: '#form-1',
        formGroupSelector: '.form-group',
        errorSelector: '.form-message',
        rules: [
            Validator.isRequired('#fullname', 'Vui lòng nhập tên đầy đủ của bạn!'),
            Validator.isEmail('#email', 'Vui lòng nhập email hợp lệ'),
            Validator.isRequired('#password', 'Vui lòng nhập mật khẩu'),
            Validator.isMinLength('#password', 6, 'Mật khẩu phải tối thiểu 6 kí tự'),
            Validator.isRequired('#password_confirmation', 'Vui lòng nhập mật khẩu'),
            Validator.isConfirmPassword('#password_confirmation', function () {
                return document.querySelector('#form-1 #password').value;
            }, 'Mật khẩu xác thực không chính xác!')
        ],
        onSubmit: function (data) {
            //Call API
            console.log(data);
        }
    })
</script>

