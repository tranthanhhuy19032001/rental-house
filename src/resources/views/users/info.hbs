<div class="thong-tin-user">
    <div class="container" style="width: 70%; margin-top: 20px;">
        <nav class="navbar navbar-expand-lg text-white-100" style="font-size:20px; padding: 0px; margin: 0px;">
            <ul class="navbar-nav me-auto">
                <li class="nav-item border-end bg-secondary me-2">
                    <a class="nav-link" href="/me/stored/houses">Quản lý tin</a>
                </li>

                <li class="nav-item border-end">
                    <a id="btn-current-location" class="nav-link active" href="/me/info">Thông tin tài
                        khoản</a>
                </li>
            </ul>
        </nav>

        <div>
            <div class=" title text-center">
                <h5>THÔNG TIN TÀI KHOẢN</h3>
                    {{!-- <strong>Thay đổi mật khẩu</strong> --}}
            </div>
        </div>
        {{#if currentUser}}
        {{#with currentUser}}
        {{log this._id}}
        <div class="profile-user-form container" style="width: 70%;">
            <form id="form-2" method="POST" action="/user/{{this._id}}/updateInfo?_method=PUT" name="myForm">
                <div class="profile-user-form-info">
                    <table>
                        <tr>
                            <td>Mã tài khoản</td>
                            <td>
                                <div class="input-group" style="width: 500px;">
                                    <span class="input-group-text" style="font-size: 24px;width: 50px">#</span>
                                    <input type="text" class="form-control" id="idUser" name="_id" value="{{this._id}}"
                                        disabled="true">
                                </div>
                            </td>
                        </tr>

                        <tr>
                            <td>Email</td>
                            <td>
                                <div class="input-group" style="width: 500px;">
                                    <span class="input-group-text fa fa-envelope"
                                        style="font-size: 24px;width: 50px"></span>
                                    <input type="text" class="form-control" id="emailUser" name="email"
                                        value="{{this.email}}" disabled="true">
                                </div>
                            </td>
                        </tr>

                        <tr>
                            <td>Họ tên</td>
                            <td>
                                <div class="input-group" style="width: 500px;">
                                    <span class="input-group-text fa fa-user"
                                        style="font-size: 24px;width: 50px"></span>
                                    <input type="text" class="form-control" id="namelUser" name="fullname"
                                        value="{{this.fullname}}">
                                </div>
                            </td>
                        </tr>

                        <tr>
                            <td>
                                <label for="password">Mật khẩu mới</label>
                            </td>
                            <td>
                                <div class="form-group">
                                    <div class="d-flex">
                                        <span class="input-group-text fa fa-key"
                                            style="font-size: 24px;width: 50px"></span>
                                        <input type="password" class="form-control" id="password" name="password">
                                    </div>
                                    <span class="form-message"></span>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label for="password_confirmation">Nhập lại mật khẩu mới</label>
                            </td>
                            <td>
                                <div class="form-group">
                                    <div class="d-flex">
                                        <span class="input-group-text fa fa-lock"
                                            style="font-size: 25px;width: 52px"></span>
                                        <input type="password" class="form-control" id="password_confirmation"
                                            name="password_confirmation">
                                    </div>
                                    <span class="form-message"></span>
                                </div>
                            </td>
                        </tr>

                        <tr>
                            <td></td>
                            <td>
                                <button type="submit" class="btn btn-primary mb-4 mt-2" style="width: 100%;">Cập
                                    nhật</button>
                            </td>
                        </tr>
                    </table>
                </div>
            </form>
        </div>
        {{/with}}
        {{/if}}

    </div>
</div>

<script src="/js/preventLocationLoaded.js"></script>

<script src="/js/validator.js"></script>
<script>
    Validator({
        form: '#form-2',
        formGroupSelector: '.form-group',
        errorSelector: '.form-message',
        rules: [

            Validator.isRequired('#password', 'Vui lòng nhập mật khẩu!'),
            Validator.isMinLength('#password', 6, 'Mật khẩu phải tối thiểu 6 kí tự'),
            Validator.isRequired('#password_confirmation', 'Vui lòng nhập mật khẩu!'),
            Validator.isConfirmPassword('#password_confirmation', function () {
                return document.querySelector('#form-2 #password').value;
            }, 'Mật khẩu xác thực không chính xác!'),

        ],
        onSubmit: function (data) {
            //Call API 
            //console.log(data);
        }
    })
</script>